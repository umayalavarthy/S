<%- model_class = Exam -%>
<div class="page-header-mine">
  <h3><%=t '.title', :default => model_class.model_name.human %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @exam.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exam_type) %>:</strong></dt>
  <dd><%= @exam.exam_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @exam.course.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:branch_id) %>:</strong></dt>
  <dd><%= @exam.branch.name %></dd>
</dl>

<div class="form-actions">

  <%= link_to t('.back', :default => t("helpers.links.back")),
              exams_path, :class => 'btn'  %>
  <% if current_user.user_type == 507 %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_exam_path(@exam), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              exam_path(@exam),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
      <% end %>
  <%= link_to "Start Exam", start_exam_exam_path(@exam), :class => 'btn'%>
</div>
